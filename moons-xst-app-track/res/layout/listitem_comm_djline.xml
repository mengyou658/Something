<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:background="@drawable/btn_selected"
    android:orientation="horizontal" 
  	android:layout_height="60dip"
	>   
	
	<RelativeLayout 
		android:id="@+id/layout_comm_djline_itemicon" 
	  	android:layout_width="50dip" 
	  	android:layout_height="60dip"
	  	android:layout_alignParentLeft="true"
	  	android:layout_alignParentTop="true"
	    android:layout_gravity="center_vertical"
	  	android:gravity="center"
	  	>     
	  	
        <ImageView 
            android:id="@+id/comm_djline_listitem_icon"
	      	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
			android:scaleType="matrix"
	        android:layout_marginLeft="2dip"
	        android:layout_gravity="center_vertical"
	        />	  	
    </RelativeLayout>
    
	
	
    
	<RelativeLayout 
	  	android:layout_width="match_parent" 
	  	android:layout_height="60dip"
	  	android:layout_toRightOf="@id/layout_comm_djline_itemicon"
	  	android:layout_alignParentRight="true"
	  	android:orientation="vertical" 
	  	>
	<RelativeLayout 
		android:id="@+id/layout_comm_djline_itemdesc" 
	  	android:layout_width="match_parent" 
	  	android:layout_height="match_parent"
	  	android:layout_alignParentLeft="true"
	  	android:layout_alignParentTop="true"
	  	android:orientation="vertical" 
	  	android:layout_marginRight="5dip"
	  	>     
	  	
	    <RelativeLayout 
	        android:id="@+id/layout_comm_djline_itemdesc_title" 
	        android:layout_width="match_parent"  
	        android:layout_height="35dp"
	        android:orientation="horizontal"
	        android:layout_alignParentTop="true"
	        >
	
		    <TextView
		        android:id="@+id/comm_djline_listitem_title"
		        style="@style/widget_listview_title2"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:paddingLeft="5dp"
		        android:gravity="center|left"
		        android:singleLine="true" />
		    
	   	</RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:layout_below="@id/layout_comm_djline_itemdesc_title"
	        android:orientation="horizontal" >

			<!-- <ImageView 
			    android:id="@+id/comm_djline_itemdesc_timeicon" 
		      	android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
	           	android:layout_alignParentLeft="true"
		        android:layout_marginLeft="10dip"
	           	android:layout_gravity="center_vertical"
	           	android:visibility="gone"
		        android:src="@drawable/count_time_icon"/> -->
	       	
	       					
	       	<TextView android:id="@+id/comm_djline_listitem_BuildTime"  
	       	    style="@style/widget_listview_subdesc"
	    		android:layout_width="wrap_content" 
	           	android:layout_height="fill_parent"
	           	android:layout_alignParentLeft="true"
	           	android:layout_marginLeft="5dip"
	           	android:gravity="top"       	
	            />
	       	
	       	<ProgressBar
	       	    android:id="@+id/comm_djline_listitem_down_progressBar"
	       	    style="@android:style/Widget.ProgressBar.Horizontal"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_alignParentRight="true"
	       	    android:layout_gravity="center_vertical"
	       	    android:layout_marginLeft="3dip"
	       	    android:layout_toRightOf="@id/comm_djline_listitem_BuildTime"
	       	    android:layout_weight="1"
	       	    android:minHeight="10dip" />
	       	<TextView android:id="@+id/comm_djline_listitem_downloadstate"  
	    		android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_alignParentRight="true"
	       	    android:layout_gravity="center_vertical"
	       	    android:gravity="center"
	       	    android:layout_marginLeft="3dip"
	       	    android:layout_toRightOf="@id/comm_djline_listitem_BuildTime"
	           	style="@style/widget_listview_subdesc2"
	            />

	    </RelativeLayout>	    
	    
    </RelativeLayout>	
    
	<RelativeLayout 
		android:id="@+id/layout_comm_djline_itemcheckbox" 
	  	android:layout_width="30dip" 
	  	android:layout_height="50dip"
	  	android:layout_alignParentRight="true"
	  	android:layout_alignParentTop="true"
	    android:layout_gravity="center_vertical"
	  	android:gravity="center"
	  	android:layout_toLeftOf="@+id/layout_comm_djline_itemdesc"
	  	>     
       
	  	<CheckBox
	  	    android:id="@+id/comm_djline_listitem_checkbox"
	  	    android:layout_width="30dip"
	  	    android:layout_height="50dip"
	  	    android:layout_alignParentRight="true"
	  	    android:layout_gravity="center_vertical"
	  	    android:focusable="false"
	  	    android:clickable="false"  
	  	    android:layout_marginRight="2dip"
	  	    android:visibility="gone"
	  	    android:button="@drawable/checkbox_style_green"
	  	    android:gravity="center"
	  	    android:scaleType="matrix" />
	     	
    </RelativeLayout>
    
</RelativeLayout>

</RelativeLayout> 
