<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical" 
	android:background="@color/white">
	
    <RelativeLayout 
		android:id="@+id/ll_about_head" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="50dip"
	  	android:layout_alignParentTop="true"
	  	android:background="@drawable/title_bar"> 
	  	<ImageButton 
	        android:id="@+id/home_head_Rebutton"
	        android:src="@drawable/arrow_left"
	        android:background="@color/full_transparent"
	        android:layout_width="wrap_content"
	    	android:layout_height="50dip"
	    	android:layout_alignParentLeft="true"
           	android:layout_gravity="center_vertical"
	        android:layout_marginRight="10dp"
	        />
	    <TextView 
	        android:id="@+id/ll_about_head_title"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="fill_parent"
			android:gravity="center"
	        style="@style/main_head_title"
			android:ellipsize="marquee" 
	        android:marqueeRepeatLimit="marquee_forever"
	        android:focusable="true" 
	        android:focusableInTouchMode="true"	
	        android:text="@string/main_menu_about_title"				
			
			/>
	</RelativeLayout>
	
    <RelativeLayout
        android:id="@+id/rl_logo"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:background="@color/graywhite"
        android:layout_below="@id/ll_about_head">
        <ImageView
            android:id="@+id/iv_logo" 
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:clickable="true"
            android:src="@drawable/ic_product" />
        <TextView
	        android:id="@+id/aboutus_app_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center|top"
	        android:text="@string/app_name"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/iv_logo"
	        android:paddingTop="8dip"
	        android:textColor="@color/black"
	        android:textSize="@dimen/text_size_15"
	        android:textStyle="bold" />
        <TextView 
	        android:id="@+id/about_version"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/aboutus_app_name"
	        android:layout_centerHorizontal="true"
	        android:paddingTop="3dip"
	        android:textColor="@color/black"
	        android:textSize="@dimen/text_size_15"
	        android:textStyle="bold"
	        android:text="V1.0.0(100)"/>
    </RelativeLayout>
    
	
    <RelativeLayout 
		android:id="@+id/rl_appinfo" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="300dp"
	  	android:layout_below="@id/rl_logo">
	   <RelativeLayout
        android:id="@+id/rl_phonebuildmodel"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@color/white"
        android:orientation="vertical" >
	        <TextView
	  style="@style/widget_memu_title_desc"
	            android:id="@+id/about_phonebuildmodel_text"
	            android:layout_width="fill_parent"
	            android:layout_height="30dp"
	            android:layout_alignParentLeft="true"
	            android:gravity="bottom|left"     
	            android:paddingLeft="20dp"     	
	            android:text="@string/main_menu_system_aboutus_unit_type" />
		   <TextView 
		        style="@style/widget_memu_subdesc"
		        android:id="@+id/about_phonebuildmodel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_below="@id/about_phonebuildmodel_text"
		        android:gravity="left"
		        android:paddingTop="5dp"
		        android:paddingLeft="20dp"
		        android:text="1.0.0"/>
	   </RelativeLayout>
	   <View  
        android:id="@+id/view_2"  
        android:layout_width="match_parent"  
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" 
        android:layout_below="@id/rl_phonebuildmodel"
        android:background="@color/graywhite" />
	   <RelativeLayout
        android:id="@+id/rl_phonemac"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@id/view_2"
        android:background="@color/white"
        android:orientation="vertical" >
		   <TextView
		      style="@style/widget_memu_title_desc"
	            android:id="@+id/about_phonemac_text"
	            android:layout_width="fill_parent"
	            android:layout_height="30dp"
	            android:layout_alignParentLeft="true"
	            android:gravity="bottom|left"     
	            android:paddingLeft="20dp" 
	            android:text="@string/main_menu_system_aboutus_mac_address" />
		   <TextView 
		     style="@style/widget_memu_subdesc"
		        android:id="@+id/about_phonemac"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_below="@id/about_phonemac_text"
		        android:gravity="left"
		        android:paddingTop="5dp"
		        android:paddingLeft="20dp"
		        />
	   </RelativeLayout>
	   <View  
        android:id="@+id/view_3"  
        android:layout_width="match_parent"  
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" 
        android:layout_below="@id/rl_phonemac"
        android:background="@color/graywhite" />
	   <RelativeLayout
        android:id="@+id/rl_phoneimei"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@id/view_3"
        android:background="@color/white"
        android:orientation="vertical" >
		   <TextView
		     style="@style/widget_memu_title_desc"
	            android:id="@+id/about_phoneimei_text"
	            android:layout_width="fill_parent"
	            android:layout_height="30dp"
	            android:layout_alignParentLeft="true"
	            android:gravity="bottom|left"     
	            android:paddingLeft="20dp"
	            android:text="@string/main_menu_system_aboutus_imei" />
		   <TextView 
		        style="@style/widget_memu_subdesc"
		        android:id="@+id/about_phoneimei"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_below="@id/about_phoneimei_text"
		        android:gravity="left"
		        android:paddingTop="5dp"
		        android:paddingLeft="20dp"
		        />
	   </RelativeLayout>
	   <View  
        android:id="@+id/view_4"  
        android:layout_width="match_parent"  
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" 
        android:layout_below="@id/rl_phoneimei"
        android:background="@color/graywhite" />
	   <RelativeLayout
        android:id="@+id/rl_phonebuildversion"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@id/view_4"
        android:background="@color/white"
        android:orientation="vertical" >
		   <TextView
		     style="@style/widget_memu_title_desc"
	            android:id="@+id/about_phonebuildversion_text"
	            android:layout_width="fill_parent"
	            android:layout_height="30dp"
	            android:layout_alignParentLeft="true"
	            android:gravity="bottom|left"     
	            android:paddingLeft="20dp"
	            android:text="@string/main_menu_system_aboutus_updatetime" />
		   <TextView 
		       style="@style/widget_memu_subdesc"
		        android:id="@+id/about_phonebuildversion"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_below="@id/about_phonebuildversion_text"
		        android:gravity="left"
		        android:paddingTop="5dp"
		        android:paddingLeft="20dp"
		        android:text="1.0.0"/>
	   </RelativeLayout>
	   <View  
        android:id="@+id/view_5"  
        android:layout_width="match_parent"  
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" 
        android:layout_below="@id/rl_phonebuildversion"
        android:background="@color/graywhite" />
	   <RelativeLayout
        android:id="@+id/rl_currCity"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@id/view_5"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical" >
		   <TextView
	            android:id="@+id/about_currCity_text"
	            android:layout_width="100dip"
	            android:layout_height="fill_parent"
	            android:layout_alignParentLeft="true"
	            android:gravity="center|left"
	            android:paddingLeft="20dp"            	
			    android:textSize="@dimen/text_size_16"
	         	android:textColor="@color/black" 
	            android:text="" />
		   <TextView 
		        android:id="@+id/about_currCity"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="center|left"
		        android:paddingLeft="50dp"
	            android:maxLines="2"
	            android:layout_toRightOf="@id/about_currCity_text"
	            android:textColor="@color/black"
	            android:textSize="@dimen/text_size_16" />
	   </RelativeLayout>
	   
	   <RelativeLayout
	       android:id="@+id/rl_language"
	       android:layout_width="match_parent"
	       android:layout_height="60dip"
	       android:layout_below="@id/rl_currCity"
	       android:background="@drawable/btn_selected"
	       android:clickable="true"
	       android:orientation="vertical" >
		   <TextView
		        style="@style/widget_memu_title_desc"
	            android:id="@+id/about_language_text"
	            android:layout_width="fill_parent"
	            android:layout_height="30dp"
	            android:layout_alignParentLeft="true"
	            android:gravity="bottom|left"     
	            android:paddingLeft="20dp"
	            android:text="@string/main_menu_system_aboutus_language" />
		   <TextView 
		        style="@style/widget_memu_subdesc"
		        android:id="@+id/about_language"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_below="@id/about_language_text"
		        android:gravity="left"
		        android:paddingTop="5dp"
		        android:paddingLeft="20dp"
		        android:text="@string/main_menu_system_aboutus_language_current"/>
		   <ImageView 
		        android:id="@+id/iv_about_language" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
		        android:layout_alignParentRight="true"
		        android:layout_centerInParent="true"
		        android:layout_marginRight="5dp"
		        android:src="@drawable/icon_right"
		        />
	   </RelativeLayout>

	   <RelativeLayout
	       android:id="@+id/rl_checkversion"
	       android:layout_width="match_parent"
	       android:layout_height="60dip"
	       android:layout_below="@id/rl_language"
	       android:background="@drawable/btn_selected"
	       android:clickable="true"
	       android:orientation="vertical"
	       android:visibility="gone" >

		   <TextView
		        style="@style/widget_listview_title2"
	            android:id="@+id/about_update"
	            android:layout_width="150dip"
	            android:layout_height="fill_parent"
	            android:layout_alignParentLeft="true"
	            android:gravity="center|left"
	            android:paddingLeft="20dp"            	
	            android:text="@string/main_menu_system_aboutus_Check_the_new_version" />
		   <ImageView 
		        android:id="@+id/iv_about_update" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
		        android:layout_alignParentRight="true"
		        android:layout_centerInParent="true"
		        android:layout_marginRight="5dp"
		        android:src="@drawable/icon_right"
		        />
	   </RelativeLayout>
	</RelativeLayout>
	
    <RelativeLayout 
		android:id="@+id/rl_copyright" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="fill_parent"
	  	android:layout_alignParentBottom="true"
	  	android:layout_below="@id/rl_appinfo"
	  	android:background="@color/graywhite"
	  	>
        <TextView 
            android:id="@+id/tv_copyright"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="20dip"
	        android:textColor="@color/black"
	        android:textSize="@dimen/text_size_15"
	        android:text="@string/main_about_copyright" />
       <!-- 
       	   <Button
	       android:id="@+id/about_update"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_alignParentBottom="true"
	       android:layout_alignParentTop="true"
	       android:layout_margin="5dip"
	       android:background="@drawable/btn_style_green"
	       android:clickable="true"
	       android:text="@string/main_about_checkappversion"
	       android:textColor="@color/white"
	       android:textSize="20dip" />
	       -->
	</RelativeLayout>
</RelativeLayout>