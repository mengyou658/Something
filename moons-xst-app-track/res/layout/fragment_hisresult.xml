<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/graywhite"
	android:orientation="vertical">
	<com.moons.xst.track.widget.PinnedHeaderListView
        android:id="@+id/listview_queryall_his_result"
        style="@style/widget_listview2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1px"
        android:divider="@color/graywhite"
        android:background="@color/white" />
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    android:background="@color/face_bg"
	    android:layout_marginBottom="5dp">
	    <TextView 
	        android:id="@+id/tv_hisresult_total"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:drawableTop="@drawable/ic_result_total"
	        android:paddingTop="5dp"
	        android:textSize="@dimen/text_size_15"
	        android:textColor="@color/black"/>
	    <TextView 
	        android:id="@+id/tv_hisresult_normal"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:drawableTop="@drawable/nordjresult_icon"
	        android:paddingTop="5dp"
	        android:textSize="@dimen/text_size_15"
	        android:textColor="@color/black"/>
	    <TextView 
	        android:id="@+id/tv_hisresult_error"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:drawableTop="@drawable/exdjresult_icon"
	        android:paddingTop="5dp"
	        android:textSize="@dimen/text_size_15"
	        android:textColor="@color/black"/>
	</LinearLayout>
</LinearLayout>