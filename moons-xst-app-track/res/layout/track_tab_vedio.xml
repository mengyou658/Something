<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    
	<RelativeLayout 
	    android:id="@+id/rl_track_vedio_title"
        android:layout_width="fill_parent" 
   	 	android:layout_height="40dip"      
   	 	android:layout_alignParentTop="true" 
   	 	  
        android:background="@color/face_bg"
        android:orientation="horizontal">
        <TextView
             android:id="@+id/planvedio_num"
         	android:layout_width="fill_parent" 
         	android:layout_height="fill_parent"
         	android:gravity="center_horizontal|center_vertical" 
         	android:textSize="@dimen/text_size_14"
         	android:textColor="@color/black" 
         	android:textStyle="bold" 
         	android:text="未录像" />
        <ImageButton
	        android:id="@+id/btn_savevedio"
	        android:layout_width="35dip"
	        android:layout_height="35dip"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="2dp"
	        android:background="#00000000"
	        android:gravity="center_horizontal|center_vertical" 
	        android:src="@drawable/dj_vedio_bar" />

    </RelativeLayout>      
    
    <RelativeLayout
        android:id="@+id/rl_track_vedio_Gallery"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        android:layout_below="@id/rl_track_vedio_title"
        
        android:background="@color/white"
        android:orientation="vertical"
        >

	    <Gallery
	        android:id="@+id/track_vedio_galley"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="10dip"
	        android:gravity="center"
	        android:spacing="3dip"
	        />        
        
    </RelativeLayout>
    

</RelativeLayout>