<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/query_djline"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white" >  

	<RelativeLayout
        android:id="@+id/query_djline_head"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/title_bar" >

        <ImageButton
            android:id="@+id/home_head_Rebutton"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@color/full_transparent"
            android:src="@drawable/arrow_left" />

        <ImageButton
            android:id="@+id/query_djline_serach"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@color/full_transparent"
            android:src="@drawable/search" />

        <TextView
            android:id="@+id/query_djline_head_title"
            style="@style/main_head_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/main_menu_query_line_select" />
    </RelativeLayout>
    
	<ListView
        android:id="@+id/query_listview_djline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1px"
        android:divider="@color/graywhite" />
	<ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/graywhite"/>
	    	
</LinearLayout>
