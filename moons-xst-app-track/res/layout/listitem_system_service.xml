<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/widget_listview_Item"
    android:orientation="horizontal" 
  	android:layout_height="50dip"
	>   
	
	<RelativeLayout 
		android:id="@+id/layout_systemservice_itemicon" 
	  	android:layout_width="50dip" 
	  	android:layout_height="50dip"
	  	android:layout_alignParentLeft="true"
	  	android:layout_alignParentTop="true"
	    android:layout_gravity="center_vertical"
	  	android:gravity="center"
	  	>     
	  	
        <ImageView 
            android:id="@+id/systemservice_listitem_icon"
	      	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
			android:scaleType="matrix"
	        android:layout_marginLeft="2dip"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/ic_system_service"
	        />	  	
    </RelativeLayout>
    
	<RelativeLayout 
		android:id="@+id/layout_systemservice_itemdesc" 
	  	android:layout_width="match_parent" 
	  	android:layout_height="50dip"
	  	android:layout_toRightOf="@id/layout_systemservice_itemicon"
	  	android:layout_alignParentRight="true"
	  	android:orientation="vertical" 
	  	>	    
	    <TextView
	        android:id="@+id/listitem_systemservice_itemdesc" 
	        android:layout_width="fill_parent" 
	        android:layout_height="fill_parent"
	        android:paddingLeft="10dp"
	        android:gravity="center|left"
	        android:textSize="@dimen/text_size_16"
        	android:textColor="@color/black" />
    </RelativeLayout>	
	


</RelativeLayout> 
