<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/widget_listview_Item"
    android:orientation="horizontal" 
  	android:layout_height="35dip"
  	android:background="@drawable/listitem_corner1"
	>   
	
	<RelativeLayout 
		android:id="@+id/layout_point_itemicon" 
	  	android:layout_width="35dip" 
	  	android:layout_height="35dip"
	  	android:layout_alignParentLeft="true"
	  	android:layout_alignParentTop="true"
	    android:layout_gravity="center_vertical"
	  	android:gravity="center"
	  	>     
	  	
        <ImageView 
            android:id="@+id/icon_point"
	      	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
			android:scaleType="matrix"
	        android:layout_marginLeft="2dip"
	        android:layout_gravity="center_vertical"
	        />	  	
    </RelativeLayout>
    
	<RelativeLayout 
		android:id="@+id/layout_point_itemdesc" 
	  	android:layout_width="match_parent" 
	  	android:layout_height="35dip"
	  	android:layout_toRightOf="@id/layout_point_itemicon"
	  	android:layout_alignParentRight="true"
	  	android:orientation="vertical" 
	  	>     
	  	
	    <RelativeLayout 
	        android:id="@+id/layout_point_itemdesc_title" 
	        android:layout_width="match_parent"  
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:layout_alignParentTop="true"
	        >
	
	    
		    <TextView android:id="@+id/point_listitem_title" 
		        style="@style/widget_listview_title3"
		        android:layout_width="fill_parent" 
		     	android:layout_height="wrap_content"
		     	android:singleLine="true"/> 	    
		    
	   	</RelativeLayout>
	
	    <RelativeLayout 
	        android:layout_width="fill_parent"  
	        android:layout_height="match_parent"
	    	android:orientation="horizontal" 
	    	android:layout_below="@id/layout_point_itemdesc_title"
	        >   
	       	
	        
			<ImageView 
			    android:id="@+id/point_itemdesc_pointtime" 
		      	android:layout_width="0dp" 
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
	           	android:layout_gravity="center_vertical"
		        android:src="@drawable/count_idpod_icon"/>
	        
	       	<TextView android:id="@+id/point_listitem_time"  
	    		android:layout_width="0dp" 
	           	android:layout_height="wrap_content" 
	           	android:layout_toRightOf="@id/point_itemdesc_pointtime"
	           	android:layout_gravity="center_vertical"
	           	style="@style/widget_listview_subdesc3"
	            />
	
	       	
			<ImageView 
			    android:id="@+id/point_itemdesc_spend" 
		      	android:layout_width="0dp" 
		        android:layout_height="wrap_content"
	           	android:layout_toRightOf="@id/point_listitem_time"
		        android:layout_marginLeft="0dip"
	           	android:layout_gravity="center_vertical"
		        android:src="@drawable/count_plan_icon"/>
	       			        
	       	<TextView android:id="@+id/point_listitem_spendCount"  
	    		android:layout_width="0dp" 
	           	android:layout_height="wrap_content" 
	           	android:layout_toRightOf="@id/point_itemdesc_spend"
	           	android:layout_marginLeft="0dip"
	           	android:layout_gravity="center_vertical"
	           	style="@style/widget_listview_subdesc3"
	            />
	       	<ImageView 
			    android:id="@+id/point_itemdesc_distance" 
		      	android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
	           	android:layout_toRightOf="@id/point_listitem_spendCount"
		        android:layout_marginLeft="0dip"
	           	android:layout_gravity="center_vertical"
		        android:src="@drawable/count_plan_icon"/>
	       			        
	       	<TextView android:id="@+id/point_listitem_distanceTxt"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_toRightOf="@id/point_itemdesc_distance"
	           	android:layout_marginLeft="3dip"
	           	android:layout_gravity="center_vertical"
	           	style="@style/widget_listview_subdesc3"
	            />
	       			
	    </RelativeLayout>	    
	    
    </RelativeLayout>	
	


</RelativeLayout> 