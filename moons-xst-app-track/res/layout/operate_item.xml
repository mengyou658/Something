<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/widget_listview_Item"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >
    <ImageView 
        android:id="@+id/iv_operate_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:src="@drawable/widget_bar_operatebill_complete_xh"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:paddingTop="4dp" >

            <TextView
                android:id="@+id/tv_operate_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="20170301"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_operate_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:minWidth="50dp"
                android:gravity="center"
                android:textColor="@color/listitem_bulewhite"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_operate_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:singleLine="true"
            android:text="张三"
            android:textColor="@color/listitem_bulewhite"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

</LinearLayout>