    <!-- GreenDroid UI Tool -->
    <style name="GreenDroid" />

    <style name="GreenDroid.Widget" />

    <style name="GreenDroid.Widget.QuickAction" />

    <style name="GreenDroid.Widget.QuickAction.Bar" />

    <style name="GreenDroid.Widget.QuickAction.Grid">
        <item name="android:padding">1dp</item>
        <item name="android:listSelector">@drawable/gd_quick_action_grid_selector</item>
        <item name="android:background">@drawable/widget_bar_bg_n</item>
        <item name="android:gravity">center</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">1dp</item>
        <item name="android:numColumns">1</item>
    </style>
    
    <style name="GreenDroid.Widget.QuickAction.Item">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GreenDroid.Widget.QuickAction.Bar.Item" parent="@style/GreenDroid.Widget.QuickAction.Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:maxWidth">120dp</item>
        <item name="android:background">@drawable/bottom_bar</item>
    </style>

    <style name="GreenDroid.Widget.QuickAction.Grid.Item" parent="@style/GreenDroid.Widget.QuickAction.Item">
