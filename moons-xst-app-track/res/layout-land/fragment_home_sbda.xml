<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="#00000000" >
 
     
    <RelativeLayout
        android:id="@+id/fl_home_wdzl_content_left"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/pad_tab_bg">
	        <RelativeLayout
	        android:id="@+id/fl_home_wdzl_content_left_view1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/half_transparent_white">
        
		    <RelativeLayout
		        android:id="@+id/fl_home_wdzl_content_left_view1_title"
		        style="@style/pad_home_menu_title_style"
		        android:orientation="vertical"
		        
		        >
		        <ImageView
                    android:id="@+id/home_wdzl_content_left_view1_title_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/pad_second_menu_icon" />
			    <TextView
			        android:id="@+id/home_txt_tipsdj"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:gravity="left|center"
			        android:layout_toRightOf="@id/home_wdzl_content_left_view1_title_icon"
			        android:text="设备列表"
			        style="@style/pad_home_menu_title_txt_style"
			        />
		    </RelativeLayout>
		    <RelativeLayout
		        android:id="@+id/fl_home_wdzl_content_left_view1_buttom"
		        style="@style/pad_home_menu_buttom_style"
		        android:layout_alignParentBottom="true"
		        android:orientation="vertical"
		        >
			    <ImageView
                    android:id="@+id/home_wdzl_content_left_view1_buttom_return"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/pad_simple_return" />
			    <TextView
			        android:id="@+id/home_wdzl_content_left_view1_buttom_txt"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:gravity="left|center"
			        android:layout_toRightOf="@id/home_wdzl_content_left_view1_buttom_return"
			        android:text="返回上一级"
			        style="@style/pad_home_menu_title_txt_style"
			        />
		    </RelativeLayout>
		    <RelativeLayout
		        android:id="@+id/fl_home_wdzl_content_left_view1_linelist"
			  	android:layout_width="fill_parent" 
			  	android:layout_height="fill_parent"
			  	android:layout_margin="2dp"
			  	android:layout_below="@id/fl_home_wdzl_content_left_view1_title"
			  	android:layout_above="@id/fl_home_wdzl_content_left_view1_buttom"
		        >
				<ListView
				    android:id="@+id/home_wdzl_content_left_view1_listview"
				    android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentTop="true"
				    android:cacheColorHint="#0000"
				    android:divider="#7fffffff"
				    android:dividerHeight="1dp"
				    android:scrollbarStyle="outsideOverlay"
		            android:stackFromBottom="false"/>          
		    </RelativeLayout>
    	</RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fl_home_wdzl_content_right"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/fl_home_wdzl_content_left"
        android:background="@color/full_transparent">
        <RelativeLayout
        android:id="@+id/fl_home_xjgl_content_right_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/half_transparent_white">
         <RelativeLayout
		        android:id="@+id/fl_home_wdzl_content_right_view1_title"
		        style="@style/pad_home_content_title_style"
		        android:orientation="vertical"
		        >
			    <TextView
			        android:id="@+id/home_txt_tipsdj1"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_marginLeft="10dip"
			        android:gravity="left|center"
			        android:text="设备档案"
			        style="@style/pad_home_content_title_txt_style"/>
		    </RelativeLayout>
		    <RelativeLayout 
		        android:id="@+id/fl_home_wdzl_content_right_view1_linelist"
			  	android:layout_width="fill_parent" 
			  	android:layout_height="wrap_content"
			  	android:layout_margin="5dp"
			  	android:layout_below="@id/fl_home_wdzl_content_right_view1_title"
		        >
				<ListView
				    android:id="@+id/home_wdzl_content_right_view1_listview"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentTop="true"
				    android:cacheColorHint="#0000"
				    android:divider="#7fffffff"
				    android:dividerHeight="1dp"
				    android:scrollbarStyle="outsideOverlay"
		            android:stackFromBottom="false" />          
		    </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>