<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="horizontal" 
  	android:layout_height="25dip"
  	android:background="#00000000"
	>   
	
	<RelativeLayout 
		android:id="@+id/pad_layout_listitem_second_menu_itemicon" 
	  	android:layout_width="20dip" 
	  	android:layout_height="25dip"
	  	android:layout_alignParentLeft="true"
	  	android:layout_alignParentTop="true"
	    android:layout_gravity="center_vertical"
	  	android:gravity="center"
	  	>     
        <ImageView 
            android:id="@+id/pad_listitem_home_second_menu_icon"
	      	android:layout_width="15dip" 
	        android:layout_height="15dip"
			android:scaleType="fitCenter"
	        android:layout_marginLeft="2dip"
	        android:layout_gravity="center_vertical"
	        />	  	
    </RelativeLayout>
    <RelativeLayout 
		android:id="@+id/pad_layout_listitem_second_menu_item_go" 
	  	android:layout_width="20dip" 
	  	android:layout_height="25dip"
	  	android:layout_alignParentRight="true"
	  	android:layout_alignParentTop="true"
	    android:layout_gravity="center_vertical"
	  	android:gravity="center"
	  	>     
	  	<ImageView 
            android:id="@+id/pad_listitem_home_second_menu_go"
	      	android:layout_width="15dip" 
	        android:layout_height="15dip"
			android:scaleType="fitCenter"
	        android:layout_marginLeft="2dip"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/go_to_right"
	        />
	     	
    </RelativeLayout>
	<RelativeLayout 
		android:id="@+id/pad_layout_second_menu_itemdesc" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="25dip"
	  	android:layout_toRightOf="@id/pad_layout_listitem_second_menu_itemicon"
	  	android:layout_toLeftOf="@id/pad_layout_listitem_second_menu_item_go"
	  	android:orientation="vertical" 
	  	>     
	  	
	    <RelativeLayout 
	        android:id="@+id/pad_layout_listitem_second_menu_itemdesc" 
	        android:layout_width="fill_parent"  
	        android:layout_height="25dip"
	        android:orientation="horizontal" 
	        android:layout_alignParentTop="true"
	        >	    

		    <TextView
		        android:id="@+id/pad_listitem_home_second_menu_itemdesc1"
		        style="@style/pad_home_menu_content_txt_style"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="center|left"
		        android:singleLine="true" />
		    
	   	</RelativeLayout>	    
	    
    </RelativeLayout>
	
	


</RelativeLayout> 