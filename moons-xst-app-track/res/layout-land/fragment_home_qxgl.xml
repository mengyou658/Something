<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="#00000000" >
 
    <RelativeLayout
        android:id="@+id/fl_home_xjgl_content_right"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/full_transparent">
        <RelativeLayout
        android:id="@+id/fl_home_xjgl_content_right_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/half_transparent_white">
         <RelativeLayout
		        android:id="@+id/fl_home_xjgl_content_right_view1_title"
		        style="@style/pad_home_content_title_style"
		        android:orientation="vertical"
		        >
			    <TextView
			        android:id="@+id/home_txt_tipsdj"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_marginLeft="10dip"
			        android:gravity="left|center"
			        android:text="最近操作"
			        style="@style/pad_home_content_title_txt_style"/>
		    </RelativeLayout>
		    <RelativeLayout 
		        android:id="@+id/fl_home_xjgl_content_right_view1_linelist"
			  	android:layout_width="fill_parent" 
			  	android:layout_height="wrap_content"
			  	android:layout_margin="5dp"
			  	android:layout_below="@id/fl_home_xjgl_content_right_view1_title"
		        >
				<ListView
				    android:id="@+id/home_xjgl_content_right_view1_listview"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentTop="true"
				    android:cacheColorHint="#0000"
				    android:divider="#7fffffff"
				    android:dividerHeight="1dp"
				    android:scrollbarStyle="outsideOverlay"
		            android:stackFromBottom="false" />          
		    </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout> 
    <RelativeLayout
        android:id="@+id/fl_home_xjgl_content_left"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/fl_home_xjgl_content_right"
        android:background="#00000000">
	        <RelativeLayout
	        android:id="@+id/fl_home_xjgl_content_left_view1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginBottom="10dp"
	        android:background="@color/half_transparent_white">
        
		    <RelativeLayout
		        android:id="@+id/fl_home_xjgl_content_left_view1_title"
		        style="@style/pad_home_content_title_style"
		        android:orientation="vertical"
		        >
			    <TextView
			        android:id="@+id/home_txt_tipsdj1"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_marginLeft="10dip"
			        android:gravity="left|center"
			        android:text="待处理缺陷"
			        style="@style/pad_home_content_title_txt_style"
			        />
		    </RelativeLayout>
		    <RelativeLayout
		        android:id="@+id/fl_home_xjgl_content_left_view1_linelist"
			  	android:layout_width="fill_parent" 
			  	android:layout_height="wrap_content"
			  	android:layout_margin="5dp"
			  	android:layout_below="@id/fl_home_xjgl_content_left_view1_title"
		        >
				<ListView
				    android:id="@+id/home_xjgl_content_left_view1_linelist"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentTop="true"
				    android:cacheColorHint="#0000"
				    android:divider="#7fffffff"
				    android:dividerHeight="1dp"
				    android:scrollbarStyle="outsideOverlay"
		            android:stackFromBottom="false"/>          
		    </RelativeLayout>
    	</RelativeLayout>
    </RelativeLayout>

</RelativeLayout>