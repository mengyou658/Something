                    android:id="@+id/pad_home_main_xj1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pad_home_sys_item_user" />
                <TextView
                    android:id="@+id/main_menu_home_txt1"
            		android:text="@string/pad_home_sys_menu_userset"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:gravity="center"
            		android:layout_centerHorizontal="true"
            		android:layout_alignParentBottom="true"
            		android:layout_below="@id/pad_home_main_xj1"
            		style="@style/pad_main_module_name"
            		/>                
