<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout 
		android:id="@+id/ll_plandetail_head" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="50dip"
	  	android:background="@drawable/title_bar"> 
	  	<ImageButton 
	        android:id="@+id/home_head_Rebutton"
	        android:src="@drawable/arrow_left"
	        android:background="@color/full_transparent"
	        android:layout_width="wrap_content"
	    	android:layout_height="50dip"
	    	android:layout_alignParentLeft="true"
           	android:layout_gravity="center_vertical"
	        android:layout_marginRight="10dp"
	        />
	    <TextView 
	        android:id="@+id/ll_plandetail_head_title"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="fill_parent"
			android:gravity="center"
	        style="@style/main_head_title"
			android:ellipsize="marquee" 
	        android:marqueeRepeatLimit="marquee_forever"
	        android:focusable="true" 
	        android:focusableInTouchMode="true"	
	        android:text="@string/plan_detail"				
			
			/>
	</RelativeLayout>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graywhite"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/plan_detail_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_15"/>
            <TextView 
                android:id="@+id/tv_plandetail_plancontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graywhite"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/plan_detail_standard"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_15"/>
            <TextView 
                android:id="@+id/tv_plandetail_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graywhite"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/plan_detail_cycle"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_15"/>
            <TextView 
                android:id="@+id/tv_plandetail_cycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graywhite"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/plan_detail_checkmethod"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_15"/>
            <TextView 
                android:id="@+id/tv_plandetail_checkmethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graywhite"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/plan_detail_unit"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_15"/>
            <TextView 
                android:id="@+id/tv_plandetail_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graywhite"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/plan_detail_alarmtype"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_15"/>
            <TextView 
                android:id="@+id/tv_plandetail_alarmtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graywhite"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/plan_detail_standardvalue"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_15"/>
            <TextView 
                android:id="@+id/tv_plandetail_standardvalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graywhite"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/plan_detail_lc"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_15"/>
            <TextView 
                android:id="@+id/tv_plandetail_lc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graywhite"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/plan_detail_alarmlimit"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_15"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView 
                    android:id="@+id/tv_plandetail_upper1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
               		android:textColor="@color/black"
               		android:textSize="@dimen/text_size_18"/>
                <TextView 
                    android:id="@+id/tv_plandetail_lower1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
               		android:textColor="@color/black"
               		android:textSize="@dimen/text_size_18"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView 
                    android:id="@+id/tv_plandetail_upper2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
               		android:textColor="@color/black"
               		android:textSize="@dimen/text_size_18"/>
                <TextView 
                    android:id="@+id/tv_plandetail_lower2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
               		android:textColor="@color/black"
               		android:textSize="@dimen/text_size_18"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView 
                    android:id="@+id/tv_plandetail_upper3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
               		android:textColor="@color/black"
               		android:textSize="@dimen/text_size_18"/>
                <TextView 
                    android:id="@+id/tv_plandetail_lower3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
               		android:textColor="@color/black"
               		android:textSize="@dimen/text_size_18"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView 
                    android:id="@+id/tv_plandetail_upper4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
               		android:textColor="@color/black"
               		android:textSize="@dimen/text_size_18"/>
                <TextView 
                    android:id="@+id/tv_plandetail_lower4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
               		android:textColor="@color/black"
               		android:textSize="@dimen/text_size_18"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
