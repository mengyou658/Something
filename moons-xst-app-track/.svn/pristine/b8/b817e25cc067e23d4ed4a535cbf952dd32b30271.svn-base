<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/widget_listview_Item"
    android:orientation="horizontal" 
  	android:layout_height="40dip"
	>   
	
	<RelativeLayout 
		android:id="@+id/layout_offmap_itemicon" 
	  	android:layout_width="50dip" 
	  	android:layout_height="40dip"
	  	android:layout_alignParentLeft="true"
	  	android:layout_alignParentTop="true"
	    android:layout_gravity="center_vertical"
	  	android:gravity="center"
	  	>     
	  	
        <ImageView 
            android:id="@+id/icon_point"
	      	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
			android:scaleType="matrix"
	        android:layout_marginLeft="2dip"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/icon_cp" 
	        />	  	
    </RelativeLayout>
    
	<RelativeLayout 
		android:id="@+id/layout_offmap_itemdesc" 
	  	android:layout_width="match_parent" 
	  	android:layout_height="50dip"
	  	android:layout_toRightOf="@id/layout_offmap_itemicon"
	  	android:layout_alignParentRight="true"
	  	android:orientation="vertical" 
	  	>     
	  	
	    <RelativeLayout 
	        android:id="@+id/layout_offmap_itemdesc_title" 
	        android:layout_width="match_parent"  
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal" 
	        >
	
	    
		    <TextView android:id="@+id/offmap_listitem_title" 
		        style="@style/widget_listview_title2"
		        android:layout_width="wrap_content" 
		     	android:layout_height="wrap_content"
		     	android:layout_alignParentLeft="true"
		     	android:text="title"
		     	android:singleLine="true"/> 
		     	
		    <TextView android:id="@+id/offmap_listitem_state" 
		        style="@style/widget_listview_title2"
		        android:layout_width="wrap_content" 
		     	android:layout_height="wrap_content"
		     	android:layout_toRightOf="@id/offmap_listitem_title"
		     	android:layout_alignParentBottom="true"
		     	android:layout_marginLeft="5dp"
		     	android:layout_marginBottom="15dp"
		     	android:text="title"
		     	android:textSize="@dimen/text_size_14"
		     	android:singleLine="true"/> 
		     	
		   <TextView android:id="@+id/offmap_listitem_size" 
		        style="@style/widget_listview_title2"
		        android:layout_width="wrap_content" 
		     	android:layout_height="wrap_content"
		     	android:text="title"
		     	android:layout_alignParentRight="true"
		     	android:singleLine="true"/> 
			<!--  		     	
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"        	     	
				android:scaleType="matrix"
				android:layout_marginRight="10dip"
				android:src="@drawable/widget_right_icon" />      					
		    -->	    
		    
	   	</RelativeLayout>
	
	    
	    
    </RelativeLayout>	
	


</RelativeLayout> 