<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    
	<RelativeLayout 
	    android:id="@+id/rl_track_picture_title"
        android:layout_width="fill_parent" 
   	 	android:layout_height="40dip"      
   	 	android:layout_alignParentTop="true" 
   	 	  
        android:background="@color/face_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/planpicture_num"
         	android:layout_width="fill_parent" 
         	android:layout_height="fill_parent"
         	android:gravity="center_horizontal|center_vertical" 
         	android:textSize="@dimen/text_size_14"
         	android:textColor="@color/black" 
         	android:textStyle="bold" />

    </RelativeLayout>      
    

    <RelativeLayout
        android:id="@+id/rl_track_picture_action"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >		
        
        <Button
            android:id="@+id/btn_savepicture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dip"
            android:background="@drawable/btn_style_green"
            android:tag="1"
            android:text="@string/track_inputbug_picture_btn"
            android:textColor="@color/white"
	        android:textSize="@dimen/btn_big_textsize"
             />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_track_picture_Gallery"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        android:layout_below="@id/rl_track_picture_title"
        android:layout_above="@id/rl_track_picture_action"
        
        android:background="@color/white"
        android:orientation="vertical"
        >

	    <Gallery
	        android:id="@+id/track_picture_galley"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="10dip"
	        android:gravity="center"
	        android:spacing="3dip"
	        />        
        
    </RelativeLayout>
    

</RelativeLayout>