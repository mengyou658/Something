                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/category"
                android:gravity="left|center"
                android:paddingLeft="10dip"
                android:text="@string/main_menu_tools_systool"
                android:textColor="@color/catefory_text"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl_layout_tools_readid"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:background="@drawable/btn_selected"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/img_tools_readid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/widget_bar_readid_xh" />

                <TextView
                    android:id="@+id/textview_tools_readid_desc"
                    style="@style/widget_memu_title_desc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/img_tools_readid"
                    android:gravity="bottom|left"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/main_menu_tools_readid" />

                <TextView
                    style="@style/widget_memu_subdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textview_tools_readid_desc"
                    android:layout_toRightOf="@id/img_tools_readid"
                    android:singleLine="true"
                    android:paddingLeft="10dip"
                    android:text="@string/main_menu_tools_readid_desc" />
            </RelativeLayout>

            <include layout="@layout/vertical_split_line_1dp" />

            <RelativeLayout
