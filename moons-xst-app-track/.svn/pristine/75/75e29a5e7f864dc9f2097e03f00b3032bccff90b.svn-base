<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/system_fileinfo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/graywhite" > 
    <RelativeLayout 
		android:id="@+id/layout_system_fileinfo_head" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="50dip"
	  	android:layout_alignParentTop="true"
	  	android:background="@drawable/title_bar"> 
	  	<ImageView
	        android:id="@+id/system_fileinfo_head_sendbutton"        
	        android:background="@drawable/ic_send"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentRight="true"
           	android:layout_centerInParent="true"
	        android:layout_marginRight="10dp"
	        android:clickable="true"
	        />
        <ImageButton 
	        android:id="@+id/home_head_Rebutton"
	        android:src="@drawable/arrow_left"
	        android:background="@color/full_transparent"
	        android:layout_width="wrap_content"
	    	android:layout_height="50dip"
	    	android:layout_alignParentLeft="true"
           	android:layout_gravity="center_vertical"
	        android:layout_marginRight="10dp"
	        />
	    <TextView 
	        android:id="@+id/system_fileinfo_head_title"
	        android:layout_width="fill_parent" 
		  	android:layout_height="fill_parent"
			android:gravity="center"
	        style="@style/main_head_title"
			android:ellipsize="marquee" 
	        android:marqueeRepeatLimit="marquee_forever"
	        android:focusable="true" 
	        android:focusableInTouchMode="true"			
			android:text="@string/main_menu_system_aboutus_logo_hide_sysinfo_filefind"
			/>  
	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/rl_fileinfo_listview"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/layout_system_fileinfo_head" >

	    <ListView
	        android:id="@+id/listview_system_fileinfo"
	        style="@style/widget_listview2"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:cacheColorHint="@color/author_text"
		    android:divider="@color/graywhite" />
	</RelativeLayout>
	
</RelativeLayout>