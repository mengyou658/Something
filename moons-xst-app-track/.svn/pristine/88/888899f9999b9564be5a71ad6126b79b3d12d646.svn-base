<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/walkie_talkie_xdinfo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white" > 
    <RelativeLayout 
		android:id="@+id/ll_walkie_talkie_xdinfo_head" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="50dip"
	  	android:layout_alignParentTop="true"
	  	android:background="@drawable/title_bar"> 
	  	<ImageButton 
	        android:id="@+id/home_head_Rebutton"
	        android:src="@drawable/arrow_left"
	        android:background="@color/full_transparent"
	        android:layout_width="wrap_content"
	    	android:layout_height="50dip"
	    	android:layout_alignParentLeft="true"
           	android:layout_gravity="center_vertical"
	        android:layout_marginRight="10dip"
	        />
	    <TextView 
	        android:id="@+id/ll_walkie_talkie_xdinfo_head_title"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="fill_parent"
			android:gravity="center"
	        style="@style/main_head_title"
			android:ellipsize="marquee" 
	        android:marqueeRepeatLimit="marquee_forever"
	        android:focusable="true" 
	        android:focusableInTouchMode="true"							
			/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/ll_walkie_talkie_xdinfo_Name" 
        android:layout_width="match_parent"
	 	android:layout_height="50dip"      
	  	android:layout_below="@+id/ll_walkie_talkie_xdinfo_head"
        android:orientation="vertical"
        >
        
	    <TextView
	    	android:id="@+id/walkie_talkie_xdinfo_Name"
         	android:layout_width="70dip" 
         	android:layout_height="fill_parent"
         	android:layout_marginLeft="2.0dip"
         	android:gravity="center" 
         	android:textSize="@dimen/text_size_16"
         	android:textColor="@color/black" 
         	android:textStyle="bold" 
         	android:layout_alignParentLeft="true"
         	android:text="@string/walkie_talkie_xdnfo_name"
	        />
	    <EditText
	    	android:id="@+id/walkie_talkie_xdinfo_name_Value"
         	android:layout_width="wrap_content" 
         	android:layout_height="fill_parent"
         	android:layout_toRightOf="@id/walkie_talkie_xdinfo_Name"
         	android:textSize="@dimen/text_size_16"
         	android:maxLines="1" 
	        android:singleLine="true" 
         	android:hint="@string/walkie_talkie_xdnfo_name_hint"
         	android:background="@null" 
         	android:selectAllOnFocus="true"
	        />           
    </RelativeLayout>
    <View  
        android:id="@+id/view_1"  
        android:layout_width="match_parent"  
        android:layout_height="1dp"  
        android:layout_below="@id/ll_walkie_talkie_xdinfo_Name"
        android:background="@color/face_bg" />
	<RelativeLayout
		android:id="@+id/ll_walkie_talkie_xdinfo_Frequency" 
        android:layout_width="match_parent"
	 	android:layout_height="50dip"      
	  	android:layout_below="@+id/view_1"
        android:orientation="vertical"
        >
        
	    <TextView
	    	android:id="@+id/walkie_talkie_xdinfo_Frequency"
         	android:layout_width="70dip" 
         	android:layout_height="fill_parent"
         	android:layout_marginLeft="2.0dip"
         	android:gravity="center" 
         	android:textSize="@dimen/text_size_16"
         	android:textColor="@color/black" 
         	android:textStyle="bold" 
         	android:layout_alignParentLeft="true"
         	android:text="@string/walkie_talkie_xdnfo_frequency"
	        />
	    <EditText
	    	android:id="@+id/walkie_talkie_xdinfo_frequency_Value"
         	android:layout_width="wrap_content" 
         	android:layout_height="fill_parent"
         	android:layout_toRightOf="@id/walkie_talkie_xdinfo_Frequency"
         	android:textSize="@dimen/text_size_16"
         	android:maxLines="1" 
	        android:singleLine="true" 
         	android:hint="@string/walkie_talkie_xdnfo_frequency_hint"
         	android:background="@null" 
         	android:selectAllOnFocus="true"
         	android:inputType="numberDecimal"
	        />           
    </RelativeLayout>
    <View  
        android:id="@+id/view_2"  
        android:layout_width="match_parent"  
        android:layout_height="1dp"  
        android:layout_below="@id/ll_walkie_talkie_xdinfo_Frequency"
        android:background="@color/face_bg" />
    <RelativeLayout
        android:layout_width="match_parent"
	 	android:layout_height="80dip"
	 	android:layout_below="@+id/view_2"
	 	android:orientation="vertical" >
	    <TextView
				        android:id="@+id/temperature_memu_setup"
				        android:layout_width="fill_parent"
				        android:layout_height="40dip"
				        android:gravity="center"
				        android:text="@string/walkie_talkie_xdinfo_desc1"
				        android:textColor= "@color/gray" />
	    <TextView
				        android:layout_width="fill_parent"
				        android:layout_height="40dip"
				        android:layout_below="@+id/temperature_memu_setup"
				        android:gravity="center"
				        android:text="@string/walkie_talkie_xdinfo_desc2"
				        android:textColor= "@color/gray" />
	 </RelativeLayout>
	
    <RelativeLayout 
		android:id="@+id/ll_walkie_talkie_Save" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="60dip"
	  	android:layout_alignParentBottom="true"
	  	android:background="@color/face_bg"
	  	>

	   <Button
	       android:id="@+id/btn_saveXDInfo"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_alignParentBottom="true"
	       android:layout_alignParentTop="true"
	       android:layout_margin="5dip"
	       android:background="@drawable/btn_style_green"
	       android:clickable="true"
	       android:text="@string/walkie_talkie_xdnfo_save"
	       android:textColor="@color/white"
	       android:textSize="@dimen/btn_big_textsize" />
	</RelativeLayout>

</RelativeLayout>