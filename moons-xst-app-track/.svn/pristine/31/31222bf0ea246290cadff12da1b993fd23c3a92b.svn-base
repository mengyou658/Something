<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/widget_listview_Item"
    android:orientation="horizontal" 
  	android:layout_height="60dip"
	>   
	
	<RelativeLayout 
		android:id="@+id/layout_systemfileinfo_itemicon" 
	  	android:layout_width="50dip" 
	  	android:layout_height="fill_parent"
	  	android:layout_alignParentLeft="true"
	    android:layout_gravity="center_vertical"
	  	>     
	  	
        <ImageView 
            android:id="@+id/systembuginfo_listitem_icon"
	      	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginTop="12dp"
	        android:layout_gravity="center_vertical"
	        />	  	
    </RelativeLayout>
    
	<ImageView 
		        android:id="@+id/iv_system_fileinfo" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
		        android:layout_alignParentRight="true"
		        android:layout_centerInParent="true"
		        android:layout_marginRight="5dp"
		        android:src="@drawable/icon_right"
		        />
    
	<RelativeLayout
	    android:id="@+id/layout_systemfileinfo_itemdesc"
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:layout_toRightOf="@id/layout_systemfileinfo_itemicon"
	    android:layout_toLeftOf="@id/iv_system_fileinfo"
	    android:orientation="vertical" >
	    
	    <TextView
	        style="@style/widget_listview_title2"
	        android:id="@+id/listitem_systemfileinfo_itemdesc" 
	        android:layout_width="fill_parent" 
	        android:layout_height="30dp"
	        android:paddingLeft="10dp"
	        android:maxLines="1"
	        android:gravity="center|left"
	        android:text="XST" />
	    <TextView
       	    style="@style/widget_memu_subdesc"
       	    android:id="@+id/listitem_systemfileinfo_itemdesc_subdesc"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_gravity="center_vertical"
       	    android:layout_below="@id/listitem_systemfileinfo_itemdesc"
       	    android:paddingLeft="10dp"
       	    android:paddingTop="3dp"
       	    android:text="文件夹  3, 文件  7" />
    </RelativeLayout>	
	


</RelativeLayout> 
