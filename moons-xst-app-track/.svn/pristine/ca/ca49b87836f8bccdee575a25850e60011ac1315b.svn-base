<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_login_othertype_desc"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/statistics_select_conditions_content"
                android:textSize="@dimen/text_size_15" />

            <View
                android:id="@+id/view_1"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_login_othertype_desc"
                android:background="@color/graywhite" />

            <View
                android:id="@+id/view_2"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/tv_login_othertype_desc"
                android:background="@color/graywhite" />
        </RelativeLayout>

        <EditText
            android:id="@+id/search_content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/input_layout_bg"
            android:gravity="center|left"
            android:hint="@string/query_content_screen_hint"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_idpos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_idpos"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/statistics_select_conditions_idpos"
                android:textSize="@dimen/text_size_15" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_idpos"
                android:background="@color/graywhite" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/tv_idpos"
                android:background="@color/graywhite" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_idpost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_selector"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/selectfilter_idpos_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/idpos_notfinish_small" />

            <TextView
                android:id="@+id/text_idpos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:text="@string/query_select_conditions_all"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/statistics_select_conditions_time"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/tv_time"
            android:background="@color/graywhite" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_time"
            android:background="@color/graywhite" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/query_start_time"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/query_end_time"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_screen_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="2017-01-04"
            android:textColor="@color/listitem_black"
            android:textSize="@dimen/text_size_25" />

        <TextView
            android:id="@+id/start_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="2017-09-13"
            android:textColor="@color/listitem_black"
            android:textSize="@dimen/text_size_25" />

        <TextView
            android:id="@+id/end_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp" >

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/query_hisdata_type_title"
                android:textSize="@dimen/text_size_15" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_type"
                android:background="@color/graywhite" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/tv_type"
                android:background="@color/graywhite" />
        </RelativeLayout>

        <com.moons.xst.track.widget.RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" >

                <RadioButton
                    android:id="@+id/rb_all"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/screen_type_bg"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/idpos_statics_total"
                    android:textColor="@color/catefory_text"
                    android:textSize="@dimen/text_size_16" />

                <RadioButton
                    android:id="@+id/rb_observe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/screen_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/query_hisdata_type_observe"
                    android:textColor="@color/catefory_text"
                    android:textSize="@dimen/text_size_16" />

                <RadioButton
                    android:id="@+id/rb_record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/screen_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/query_hisdata_type_record"
                    android:textColor="@color/catefory_text"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp" >

                <RadioButton
                    android:id="@+id/rb_cezhen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/screen_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/query_hisdata_type_cezhen"
                    android:textColor="@color/catefory_text"
                    android:textSize="@dimen/text_size_16" />

                <RadioButton
                    android:id="@+id/rb_cewen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/screen_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/query_hisdata_type_cewen"
                    android:textColor="@color/catefory_text"
                    android:textSize="@dimen/text_size_16" />

                <RadioButton
                    android:id="@+id/rb_zhuansu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/screen_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/query_hisdata_type_zhuansu"
                    android:textColor="@color/catefory_text"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>
        </com.moons.xst.track.widget.RadioGroup>
    </LinearLayout>

</LinearLayout>