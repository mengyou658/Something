<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 点击时的背景 -->
    <item android:state_pressed="true">
        <shape >
            <solid android:color="@color/graywhite"/>
            <stroke
				android:width="0.5px"
				android:color="@color/graywhite"/>
        </shape>
    </item>

     <!-- 默认的背景 -->
    <item>      
        <shape >
            <solid android:color="@color/alert_bgcolor"/>
            <stroke
				android:width="0.5px"
				android:color="@color/alert_bgcolor"/>
        </shape>
    </item>
</selector>