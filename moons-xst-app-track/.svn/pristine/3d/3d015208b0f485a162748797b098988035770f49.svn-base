<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="horizontal" 
    android:layout_width="wrap_content"
  	android:layout_height="50dip">   	

    <RelativeLayout
	  	android:layout_width="50dip" 
	  	android:layout_height="50dip"
	    android:layout_gravity="center_vertical"
	  	android:gravity="center"
	  	> 
	    <ImageView 
	        android:id="@+id/selectfilter_idpos_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:src="@drawable/idpos_notfinish_small" />
    </RelativeLayout>
    <TextView
        android:id="@+id/selectfilter_idpos_desc"
        style="@style/widget_listview_title2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center"
        android:singleLine="true"/>
    
    <ImageView 
        android:id="@+id/selectfilter_idpos_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_selected"
        android:visibility="gone" />
</LinearLayout> 
