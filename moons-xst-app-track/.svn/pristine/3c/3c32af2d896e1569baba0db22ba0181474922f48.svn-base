<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/widget_listview_Item"
    android:orientation="horizontal" 
  	android:layout_height="50dip"
	>   
	
	<RelativeLayout 
		android:id="@+id/layout_trackinit_itemicon" 
	  	android:layout_width="50dip" 
	  	android:layout_height="50dip"
	  	android:layout_alignParentLeft="true"
	  	android:layout_alignParentTop="true"
	    android:layout_gravity="center_vertical"
	  	android:gravity="center"
	  	>     
	  	
        <ImageView 
            android:id="@+id/icon_point"
	      	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
			android:scaleType="matrix"
	        android:layout_marginLeft="2dip"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/icon_cp" 
	        />	  	
    </RelativeLayout>
    
	<RelativeLayout 
		android:id="@+id/layout_trackinit_itemdesc" 
	  	android:layout_width="match_parent" 
	  	android:layout_height="50dip"
	  	android:layout_toRightOf="@id/layout_trackinit_itemicon"
	  	android:layout_alignParentRight="true"
	  	android:orientation="vertical" 
	  	>     
	  	
	    <RelativeLayout 
	        android:id="@+id/layout_trackinit_itemdesc_title" 
	        android:layout_width="match_parent"  
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:layout_alignParentTop="true"
	        >
	
	    
		    <TextView android:id="@+id/trackinit_listitem_title" 
		        style="@style/widget_listview_title2"
		        android:layout_width="fill_parent" 
		     	android:layout_height="wrap_content"
		     	android:singleLine="true"/> 
			<!--  		     	
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"        	     	
				android:scaleType="matrix"
				android:layout_marginRight="10dip"
				android:src="@drawable/widget_right_icon" />      					
		    -->	    
		    
	   	</RelativeLayout>
	
	    <RelativeLayout 
	        android:layout_width="match_parent"  
	        android:layout_height="match_parent"
	    	android:orientation="horizontal" 
	    	android:layout_below="@id/layout_trackinit_itemdesc_title"
	    	android:layout_marginTop="4dip"
	        >   
	       	
	        
			<ImageView 
			    android:id="@+id/trackinit_itemdesc_pointtime" 
		      	android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
	           	android:layout_gravity="center_vertical"
		        android:src="@drawable/ic_longitude"/>
	        
	       	<TextView android:id="@+id/trackinit_listitem_lng"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_toRightOf="@id/trackinit_itemdesc_pointtime"
	           	android:layout_gravity="center_vertical"
	           	style="@style/widget_listview_subdesc"
	            />
	
	       	
			<ImageView 
			    android:id="@+id/trackinit_itemdesc_spend" 
		      	android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
	           	android:layout_toRightOf="@id/trackinit_listitem_lng"
		        android:layout_marginLeft="10dip"
	           	android:layout_gravity="center_vertical"
		        android:src="@drawable/ic_latitude"/>
	       			        
	       	<TextView android:id="@+id/trackinit_listitem_lat"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_toRightOf="@id/trackinit_itemdesc_spend"
	           	android:layout_marginLeft="3dip"
	           	android:layout_gravity="center_vertical"
	           	style="@style/widget_listview_subdesc"
	            />
	       			
	    </RelativeLayout>	    
	    
    </RelativeLayout>	
	


</RelativeLayout> 