<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_start_view"
    android:orientation="vertical"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:background="#00000000"
    android:clickable="true" >
    <RelativeLayout 
		android:id="@+id/rl_rfidlogin_scanImge" 
	  	android:layout_width="200dip" 
	  	android:layout_height="200dip"
	  	android:layout_centerInParent="true"
	  	android:background="#00000000"
	  	> 
		<ProgressBar 
		android:id="@+id/nfc_scan_bar" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:layout_centerInParent="true"
		style="@style/nfc_scan" />
    </RelativeLayout>
    <com.moons.xst.track.widget.ShineTextView
   		     android:id="@+id/nfc_shinetextview"
   		     android:layout_width="match_parent"
   		     android:layout_height="wrap_content"
   		     android:layout_alignParentBottom="true"
   		     android:gravity="center"
   		     android:maxLines="2"
   		     android:layout_marginLeft="50dp"
   		     android:layout_marginRight="50dp"
   		     android:layout_marginBottom="50dp"
   		     android:textSize="@dimen/text_size_22"
   		     android:text="@string/login_rfid_close" /> 
</RelativeLayout>