<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comm_download"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white" > 
    <RelativeLayout 
		android:id="@+id/ll_comm_download_head" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="50dip"
	  	android:layout_alignParentTop="true"
	  	android:background="@drawable/title_bar"> 
	  	<ImageButton 
	        android:id="@+id/home_head_Rebutton"
	        android:src="@drawable/arrow_left"
	        android:background="@color/full_transparent"
	        android:layout_width="wrap_content"
	    	android:layout_height="50dip"
	    	android:layout_alignParentLeft="true"
           	android:layout_gravity="center_vertical"
	        android:layout_marginRight="10dp"
	        />
	    <TextView 
	        android:id="@+id/ll_comm_download_head_title"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="fill_parent"
			android:gravity="center"
	        style="@style/main_head_title"
			android:ellipsize="marquee" 
	        android:marqueeRepeatLimit="marquee_forever"
	        android:focusable="true" 
	        android:focusableInTouchMode="true"					
			
			/>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/ll_comm_download_statussummary" 
        android:layout_width="match_parent"
	 	android:layout_height="60dip"      
	  	android:layout_below="@+id/ll_comm_download_head"
        android:orientation="horizontal"
        >
	    <RelativeLayout
         	    android:layout_width="fill_parent" 
         	    android:layout_height="fill_parent" 
         	    android:layout_weight="1" > 
           <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true">
                 
         	<ImageView
         	        android:id="@+id/comm_download_total_pic"
         	        android:layout_width="wrap_content"
         	        android:layout_height="wrap_content"
         	        android:layout_alignParentLeft="true"
         	        android:layout_centerInParent="true"
         	        android:src="@drawable/ic_idpos_total2"
         	        android:layout_marginLeft="30dp" /> 
         	<TextView
         	        android:id="@+id/comm_download_total_desc"
         	        android:layout_width="fill_parent"
         	        android:layout_height="30dp"
         	        android:layout_toRightOf="@id/comm_download_total_pic"
         	        android:paddingLeft="18dp"
         	        android:paddingTop="11dp"
         	        android:textColor="#56abe4"
         	         android:textSize="@dimen/text_size_16"
         	        android:text="@string/idpos_statics_total" />  
		    <TextView
			    	android:id="@+id/comm_download_count"
		         	android:layout_width="fill_parent" 
		         	android:layout_height="30dp"
		         	android:layout_toRightOf="@id/comm_download_total_pic"
		         	android:layout_below="@id/comm_download_total_desc"
		         	android:paddingLeft="20dp"
	       	        android:paddingTop="1dp"
	       	         android:textSize="@dimen/text_size_16"
	       	        android:textColor="#56abe4"
		        />
		  </RelativeLayout>
	    </RelativeLayout>
	    <View  
		        android:id="@+id/view_2"  
		        android:layout_width="1dp"  
		        android:layout_height="fill_parent"  
		        android:background="@color/face_bg"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp" />
	    <RelativeLayout
         	    android:layout_width="fill_parent" 
         	    android:layout_height="fill_parent" 
         	    android:layout_weight="1" >
           <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true">
		    <ImageView
         	        android:id="@+id/comm_download_needCount_pic"
         	        android:layout_width="wrap_content"
         	        android:layout_height="wrap_content"
         	        android:layout_alignParentLeft="true"
         	        android:layout_centerInParent="true"
         	        android:src="@drawable/ic_download"
         	        android:layout_marginLeft="30dp" />
		    <TextView
         	        android:id="@+id/comm_download_needcount_desc"
         	        android:layout_width="fill_parent"
         	        android:layout_height="30dp"
         	        android:layout_toRightOf="@id/comm_download_needCount_pic"
         	        android:paddingLeft="18dp"
         	        android:paddingTop="11dp"
         	        android:textColor="@color/red"
         	         android:textSize="@dimen/text_size_16"
         	        android:text="@string/commu_download_needcount" />
		    <TextView
			    	android:id="@+id/comm_download_needCount"
		         	android:layout_width="fill_parent" 
		         	android:layout_height="30dp"
		         	android:layout_toRightOf="@id/comm_download_needCount_pic"
		         	android:layout_below="@id/comm_download_needcount_desc"
		         	android:paddingLeft="25dp"
	       	        android:paddingTop="1dp"
	       	         android:textSize="@dimen/text_size_16"
	       	        android:textColor="@color/red"
		        />       
		     </RelativeLayout>    
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_upload"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_below="@+id/ll_comm_download_head">
	    <TextView
	    	android:id="@+id/comm_upload_title"
         	android:layout_width="fill_parent" 
         	android:layout_height="30dip"
         	android:gravity="center" 
         	android:textSize="@dimen/text_size_16"
         	android:textColor="@color/black"
	        />
	    <TextView
	    	android:id="@+id/comm_upload_mes"
         	android:layout_width="fill_parent" 
         	android:layout_height="30dip"
         	android:gravity="center|left" 
         	android:textSize="@dimen/text_size_16"
         	android:textColor="@color/black"
         	android:paddingLeft="10dp" 
	       	android:layout_below="@id/comm_upload_title"
	        />
	</RelativeLayout>
    <ProgressBar  
		    android:id="@+id/comm_upload_progressBar"  
		    style="?android:attr/progressBarStyleHorizontal"  
		    android:layout_width="fill_parent"  
		    android:layout_height="4dp"  
		    android:max="100"  
		    android:progress="0"   
		    android:progressDrawable="@drawable/progressbar1"
		    android:layout_below="@id/ll_comm_download_statussummary"
		    android:visibility="visible"/>
	
    <RelativeLayout 
		android:id="@+id/ll_comm_download_statuslist" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="fill_parent"
	  	android:layout_below="@+id/comm_upload_progressBar" 
	  	android:layout_above="@+id/ll_comm_download_tips"
	  	>

		<ListView
		    android:id="@+id/comm_download_listview_status"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:dividerHeight="1px"
		    android:divider="@color/graywhite" >
		</ListView>
	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_below="@id/comm_download_listview_status"
	        android:background="@color/graywhite"/>
	</RelativeLayout>
    
    <RelativeLayout 
		android:id="@+id/ll_comm_download_tips" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="60dip"
	  	android:layout_alignParentBottom="true"
	  	android:background="@color/face_bg"
	  	>

	   <Button
	       android:id="@+id/btn_linedownload"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_alignParentBottom="true"
	       android:layout_alignParentTop="true"
	       android:layout_margin="5dip"
	       android:background="@drawable/btn_style_blue"
	       android:clickable="true"
	       android:text="@string/commu_receive_btn_download"
	       android:textColor="@color/white"
	       android:textSize="@dimen/text_size_20" />

	   <!--
	   <CheckBox
            android:id="@+id/comm_djline_checkbox"
	      	android:layout_width="30dip" 
	        android:layout_height="50dip"
	        android:layout_alignParentRight="true"
			android:scaleType="matrix"
	        android:layout_marginRight="2dip"
	        android:layout_gravity="center_vertical"
	        android:button="@drawable/checkbox_style_green"
	        />
        -->
	</RelativeLayout>

</RelativeLayout>